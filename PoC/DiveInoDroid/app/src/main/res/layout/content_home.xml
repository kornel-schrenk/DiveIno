<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="hu.diveino.droid.HomeActivity"
    tools:showIn="@layout/app_bar_home">

    <TextView
        android:id="@+id/home_computer_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:textStyle="italic"
        android:text="Computer:" />

    <ImageButton
        android:id="@+id/home_connect_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_below="@+id/home_computer_label"
        android:src="@drawable/ic_connect" />

    <ImageButton
        android:id="@+id/home_diagnostics_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_below="@+id/home_computer_label"
        android:layout_toEndOf="@+id/home_connect_button"
        android:src="@drawable/ic_diagnostics" />

    <ImageButton
        android:id="@+id/home_configuration_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_below="@+id/home_computer_label"
        android:layout_toEndOf="@+id/home_diagnostics_button"
        android:src="@drawable/ic_configuration" />

    <ImageButton
        android:id="@+id/home_device_information_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_below="@+id/home_computer_label"
        android:layout_toEndOf="@+id/home_configuration_button"
        android:src="@drawable/ic_device_information" />

    <TextView
        android:id="@+id/home_application_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_below="@+id/home_connect_button"
        android:textStyle="italic"
        android:text="Application:" />

    <ImageButton
        android:id="@+id/home_logbook_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_below="@+id/home_application_label"
        android:src="@drawable/ic_logbook" />

    <TextView
        android:id="@+id/home_other_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_below="@+id/home_logbook_button"
        android:textStyle="italic"
        android:text="Other:" />

    <ImageButton
        android:id="@+id/home_settings_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_below="@+id/home_other_label"
        android:src="@drawable/ic_settings" />

    <ImageButton
        android:id="@+id/home_help_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_below="@+id/home_other_label"
        android:layout_toEndOf="@+id/home_settings_button"
        android:src="@drawable/ic_help" />

</RelativeLayout>

